<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mauriciopoblete.walkwithme">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />


    <uses-feature
        android:name="android.hardware.BLUETOOTH_LE"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RouterDevicesWWM"
            android:label="Dispositivos Encontrados:"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".lecturaAcc" />

        <service android:name=".alertDispatcher"
            android:label="@string/app_name"
            android:enabled="true"
            android:exported="true"
            />
        <receiver android:name=".lecturaAcc$broadcastReceiver">
            <intent-filter>
                <action android:name="dataWWMdevice">

                </action>
            </intent-filter>

        </receiver>

    </application>

</manifest>